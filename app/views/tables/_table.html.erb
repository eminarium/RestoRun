<%= turbo_frame_tag table do %>
  <li class="list-group-item">
    <div class="row mt-2">

      <span class="col-md-2 col-sm-12">
        <strong><%= table.title %></strong>
      </span>

      <% if table.qrcode.attached? %>
        <div class="col-md-1 col-xs-12 text-center">
          <%= link_to table_qr_code_path(table), data: { turbo_frame: "modal" } do %>
            <i class="fa-solid fa-qrcode fa-xl"></i>
          <% end %>
        </div>
      <% end %>   

      <span class="col-md col-sm-12 mb-3">
        <%= table.description %>
      </span>

      <span class="col-auto mb-2">
        <%= link_to edit_table_path(table), data: { turbo_frame: "modal" }, class: "btn btn-warning" do %>
          <i class="fa-solid fa-pencil"></i>
        <% end %>
      </span>

    </div>
  </li>  
<% end %>