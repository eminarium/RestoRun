<%= turbo_frame_tag product do %>
  <li class="list-group-item">
    <div class="row mt-2">

      <span class="col-md-2 col-sm-12">
        <strong><%= product.title %></strong>
      </span>

      <span class="col-md-2 col-sm-12">
        <%= product.price %> $
      </span>

      <span class="col-md col-sm-12 mb-3">
        <%= product.description %>
      </span>

      <span class="col-auto mb-2">
        <%= link_to edit_product_path(product), data: { turbo_frame: "modal" }, class: "btn btn-warning" do %>
          <i class="fa-solid fa-pencil"></i>
        <% end %>
      </span>

    </div>
  </li>
<% end %>