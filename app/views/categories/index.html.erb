<div class="row">
  <% unless current_user.restaurant %>
    <div class="alert alert-danger" role="alert">
      Please, add a Restaurant info first...
    </div>
  <% end %>

  <div class="col">
    <h1 class="display-6">Categories</h1>
  </div>
  <div class="col-auto">
    <% if current_user.restaurant %>
      <%= link_to new_category_path, class: "btn btn-primary", data: { turbo_frame: "modal" } do %>
        <i class="fa-solid fa-plus"></i> New Category
      <% end %>
    <% else %>
      <%= link_to manager_dashboard_path(current_user), class: "btn btn-primary" do %>
        <i class="fa-solid fa-dashboard"></i> Dashboard
      <% end %>
    <% end %>
  </div>
</di>

<ul class="list-group mt-3">
  <%= turbo_frame_tag "#{current_user.id}-categories" do %>
    <% if @categories.blank? %>
      <p class="lead">No categories yet...</p>
    <% end %>
    <%= render @categories %>
  <% end %>
</ul>
